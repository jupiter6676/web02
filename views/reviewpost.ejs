<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>
        <%- include('layouts/navbar'); -%>

        <!-- Page Header -->
        <header class="masthead" style="background-image: url('/images/3_라따뚜이 (1).jpg');">
            <div class="overlay"></div>
            
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div class="post-heading">
                            <h1><%= reviewpost.title %></h1>
                            <!--<h2 class="subheading"><%= reviewpost.body %></h2>-->

                            <span class="meta">Posted by
                            <a href="#"><%= reviewpost.author %></a>
                            on <%= reviewpost.dateposted.toDateString() %> </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Post Content -->
        <article>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <%= reviewpost.body %>
                    </div>
                </div>
            </div>
        </article>

        <hr>

        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
    </body>

</html>